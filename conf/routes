# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()



GET		/bookings/:id				controllers.Application.bookAtCabin(id: String)
POST	/bookings					controllers.BookingController.submitBooking()
DELETE	/bookings/:id				controllers.Application.cancelBooking(id: String)
GET		/:id/bookings				controllers.Application.getOrderHistory(id: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)